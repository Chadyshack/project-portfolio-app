<p id="notice"><%= notice %></p>

<!-- From: https://getbootstrap.com/docs/4.0/examples/jumbotron/ -->
<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Projects</h1>
    <p>This application provides a way to display projects worked on by students. Simply create an account and log in to begin posting projects to be viewed by others.</p>
    <p>Created by Chad Schwenke</p>
    <p>Student, BI in Computer Security</p>
    <p>University of Colorado, Colorado Springs</p>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "btn btn-primary btn-lg" %>
